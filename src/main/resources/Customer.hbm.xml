<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "moirottoiec.salesmanagement.Entity.Customer" table = "`Customer`">
      
      <meta attribute = "class-description">
         This class contains the department detail. 
      </meta>
      
      <id name = "customerID" type = "int" column = "CustomerID">
         <generator class="native"/>
      </id>
      
      <property name = "phone" column = "Phone" type = "int"/>
      <property name = "fullName" column = "FullName" type = "string"/>
      <property name = "address" column = "Address" type = "string"/>
      <property name = "city" column = "City" type = "string"/>
      
   </class>
</hibernate-mapping>
